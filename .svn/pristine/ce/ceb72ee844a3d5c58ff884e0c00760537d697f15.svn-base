    private void buscarCliente() throws HeadlessException {
        
        if (((CPFTextField) this.txtCPFCliente).runValidation()) {
            String cpf = this.txtCPFCliente.getText().trim();
            this.cliente = new ClienteDAO().buscaPessoa(cpf);
            if (this.cliente instanceof Cliente) {
                this.lblNomeCliente.setText(this.cliente.getNome());
                this.habilitarCampos();
                this.txtModeloVeiculo.requestFocus();
            } else {
                JOptionPane.showMessageDialog(this, "Não foi possível localizar um cliente com o CPF informado.");
            }
        } else {
            JOptionPane.showMessageDialog(this, "CPF inválido, por favor, verifique.");
        }
    }

    private Boolean validaFormulario() {
        Boolean retorno = true;
        
        if (!((CPFTextField) this.txtCPFCliente).runValidation()) {
            retorno = false;
        }

        if (!((RequiredTextField) this.txtModeloVeiculo).runValidation()) {
            retorno = false;
        }

        if (!((PlacaVeiculoTextField) this.txtPlacaVeiculo).runValidation()) {
            retorno = false;
        }
        System.out.println(retorno);
        return retorno;
    }

