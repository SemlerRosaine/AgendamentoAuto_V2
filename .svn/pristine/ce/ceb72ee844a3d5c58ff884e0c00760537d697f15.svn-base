    private void btnSalvarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSalvarActionPerformed

        if (validaFormulario()) {
            this.veiculo = new Carro();
            this.veiculo.setModelo(this.txtModeloVeiculo.getText().trim().toUpperCase());
            this.veiculo.setPlaca(this.txtPlacaVeiculo.getText().trim().toUpperCase());
            this.veiculo.setCliente(this.cliente);

            this.veiculo = new CarroDao().salvar(this.veiculo);

            this.dispose();
        }
    }//GEN-LAST:event_btnSalvarActionPerformed

