    private void campoCPFClienteFocusLost(java.awt.event.FocusEvent evt) {//GEN-FIRST:event_campoCPFClienteFocusLost
        if (ValidaCpf.isCPF(campoCPFCliente.getText().trim())) {
            Cliente cliente = new ClienteDAO().buscaPessoa(campoCPFCliente.getText().trim());
            if (cliente instanceof Cliente) {
                this.cliente = cliente;
                this.popularCampos();
            }
        } else if (!("".equals(campoCPFCliente.getText().trim().replaceAll(" ", "").replaceAll("\\.", "").replaceAll("-", "")))) {
            JOptionPane.showMessageDialog(this, "O CPF digitado é inválido.", "Atenção", JOptionPane.WARNING_MESSAGE);
        }
    }//GEN-LAST:event_campoCPFClienteFocusLost

    private void txtCPFClienteFocusGained(java.awt.event.FocusEvent evt) {//GEN-FIRST:event_txtCPFClienteFocusGained
        this.txtCPFCliente.selectAll();
    }//GEN-LAST:event_txtCPFClienteFocusGained

