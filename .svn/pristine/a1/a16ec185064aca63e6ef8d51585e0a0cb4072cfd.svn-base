        buscarCliente();
    }//GEN-LAST:event_btnBuscarClienteActionPerformed

    private void jbEditarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbEditarActionPerformed
        this.cliente = this.clientes.get(this.jtClientes.getSelectedRow());
        this.jtpCliente.setSelectedIndex(0);
        this.habilitaFormularioCadastro(true);
        this.popularCampos();
    }//GEN-LAST:event_jbEditarActionPerformed

    private void jbExcluirActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbExcluirActionPerformed
        this.cliente = this.clientes.get(this.jtClientes.getSelectedRow());
        if (JOptionPane.showConfirmDialog(this, "Confirma a exclusão do cliente?", "Confirmação", JOptionPane.YES_NO_OPTION) == JOptionPane.YES_OPTION) {
            new ClienteDAO().excluirBanco(this.cliente);
        }
        this.cliente = null;
        this.habilitaFormularioCadastro(false);
        this.limparCamposTelaCadastro();
        this.buscarCliente();
    }//GEN-LAST:event_jbExcluirActionPerformed

    private void txtNomeClientePesquisaKeyReleased(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_txtNomeClientePesquisaKeyReleased
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
            this.buscarCliente();
        } else {
            if (this.txtNomeClientePesquisa.getText().trim().length() > 0) {
                this.txtCPFCliente.setText(null);
                this.btnBuscarCliente.setEnabled(true);
            }
        }
    }//GEN-LAST:event_txtNomeClientePesquisaKeyReleased

    private void txtCPFClienteKeyReleased(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_txtCPFClienteKeyReleased
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
            this.buscarCliente();
        } else {
            if (this.txtCPFCliente.getText().trim().length() > 0) {
                this.txtNomeClientePesquisa.setText(null);
                this.btnBuscarCliente.setEnabled(true);
            }
        }
    }//GEN-LAST:event_txtCPFClienteKeyReleased

