    private void buscarCliente() throws HeadlessException {

        this.clientes = new ArrayList<Cliente>();
        if (this.txtNomeClientePesquisa.getText().trim().length() > 0) {
            clientes = new ClienteDAO().buscaClientesPorNome(this.txtNomeClientePesquisa.getText().trim());
        } else if (this.txtCPFCliente.getText().trim().replaceAll("\\.", "").replace("-", "").length() > 0) {
            clientes = new ClienteDAO().buscaClientesPorCPF(this.txtCPFCliente.getText().trim());
        } else {
            JOptionPane.showMessageDialog(this, "É necessário informar o nome ou CPF do cliente para realizar a busca.", "Atenção", JOptionPane.WARNING_MESSAGE);
        }

        NonEditableTableModel defaultTableModel = new NonEditableTableModel();
        defaultTableModel.setColumnIdentifiers(new String[]{"Nome", "Data de nascimento", "CPF", "Endereço", "Telefone"});

        for (Cliente cliente : clientes) {
            defaultTableModel.addRow(new String[]{cliente.getNome(), cliente.getDataNascimento(), cliente.getCpf(), cliente.getEndereco(), cliente.getTelefone()});
        }

        this.jtClientes.setModel(defaultTableModel);
        this.jtClientes.getColumnModel().getSelectionModel().addListSelectionListener(new ListSelectionListener() {
            @Override
            public void valueChanged(ListSelectionEvent lse) {
                jbEditar.setEnabled(!jtClientes.getColumnModel().getSelectionModel().isSelectionEmpty());
                jbExcluir.setEnabled(!jtClientes.getColumnModel().getSelectionModel().isSelectionEmpty());
            }
        });
    }

    private void popularCampos() {
        this.txtNomeCliente.setText(this.cliente.getNome());
        this.campoDNCliente.setText(this.cliente.getDataNascimento());
        this.campoCPFCliente.setText(this.cliente.getCpf());
        this.campoEnderecoCliente.setText(this.cliente.getEndereco());
        this.campoTelefoneCliente.setText(this.cliente.getTelefone());
        this.campoEmail.setText(this.cliente.getEmail());
    }
